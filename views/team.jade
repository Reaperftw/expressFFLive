extends layout

block content
  div(class='textcontainer')
    p
      img(class='textheight',src='/images/raspberrypi.png')
      | &nbsp;
      a(href='/')
        | Home
    h2
      =title
    div(class='fullteamcontainer')
      div(class='fullTeamTopHeader')
        div(class='fullTeamLeftHeader')
          =teamInfo[0].teamName
          br
          | Manager:&nbsp;#{teamInfo[0].managerName}
          br
          | Gameweek:&nbsp;#{teamInfo[0].gw}
          br
          | Overall&nbsp;Points:&nbsp;#{teamInfo[0].liveOP}
        div(class='fullTeamRightHeader')
          each league, i in leagueInfo
            if league.type=='H2H'
              a(href='/league/#{league.ID}/#{gameweek}')
                | #{league.name}
              | &nbsp;| #{league.livePoints}pts&nbsp;
              img(class='arrowheight', src='/images/Arrow_#{league.posDifferential}.png')
              | &nbsp;#{league.livePosition}
              br
            else if league.type=='Classic'
              a(href='/league/#{league.ID}/#{gameweek}')
                | #{league.name}
              |&nbsp;| #{league.liveLP}pts&nbsp;
              img(class='arrowheight', src='/images/Arrow_#{league.posDifferential}.png')
              | &nbsp;#{league.livePosition}
              br
            else
              | Error Loading
              br
      div(class='fullTeamRow')
        table(class='playersTable')
          tr
            each goalkeeper, i in gk
              td
                =goalkeeper.webName
            tr
              each goalkeeperScore, i in gk
                td
                  =goalkeeperScore.score
      div(class='fullTeamRow')
        table(class='playersTable')
          tr
            each def, i in defenders
              td
                =def.webName
            tr
              each defScore, i in defenders
                td
                  =defScore.score
      div(class='fullTeamRow')
        table(class='playersTable')
          tr
            each mid, i in midfield
              td
                =mid.webName
            tr
              each midScore, i in midfield
                td
                  =midScore.score
      div(class='fullTeamRow')
        table(class='playersTable')
          tr
            each fwd, i in forwards
              td
                =fwd.webName
            tr
              each fwdScore, i in forwards
                td
                  =fwdScore.score
      div(class='fullTeamRow')
        p Bench
        table(class='benchTable')
          tr
            each ben, i in bench
              td
                =ben.webName
            tr
              each benScore, i in bench
                td
                  =benScore.score
