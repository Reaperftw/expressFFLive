extends layout

block content
  div(class='textcontainer')
    p
      img(class='textheight',src='/images/raspberrypi.png', alt='RPi')
      | &nbsp;
      a(href='/')
        | Home
    h2
      =title
    div(class='fullteamcontainer')
      div(class='fullTeamTopHeader')
        div(class='fullTeamLeftHeader')
          for teams in allData.teamInfo
            =teams.teamName
            br
            | Manager:&nbsp;#{teams.managerName}
            br
            | Gameweek:&nbsp;#{teams.gw}pts
            br
            | Overall&nbsp;Points:&nbsp;#{teams.liveOP}pts
            br
            if allData.transfers.transferOut.length != 0
              a(class='tooltip')
                | Transfers
                span
                  table(class='transferTable')
                    for player in allData.transfers.transferOut
                      tr
                        th
                          =player.webName
                          | &nbsp;
                          img(src='/images/transOut.png', class='arrowheight')
                      tr
                        td
                          =player.score


            else
              | Transfers
            | &nbsp;:&nbsp;#{teams.transfers}&nbsp;(#{teams.deductions}pts)
        div(class='fullTeamRightHeader')
          each league in allData.leagueInfo
            if league.type=='H2H'
              a(href='/league/#{league.ID}/#{gameweek}')
                | #{league.name}
              | &nbsp;| #{league.livePoints}pts&nbsp;
              img(class='arrowheight', src='/images/Arrow_#{league.posDifferential}.png')
              | &nbsp;#{league.livePosition}
              br
            else if league.type=='Classic'
              a(href='/league/#{league.ID}/#{gameweek}')
                | #{league.name}
              |&nbsp;| #{league.liveLP}pts&nbsp;
              img(class='arrowheight', src='/images/Arrow_#{league.posDifferential}.png')
              | &nbsp;#{league.livePosition}
              br
            else
              | Error Loading
              br


      each row in allData.fieldRows
        div(class='fullTeamRow')
          table(class='playersTable')
            tr
              each player in row
                td
                  =player.webName
                  each transfer in allData.transfers.transferIn
                    if player.playerID == transfer
                      | &nbsp;
                      img(src='/images/transIn.png', alt='Transfer In', class='arrowheight')
            tr
              each playerScore in row
                td
                  if playerScore.playerID == playerScore.captainID
                    a(class="tooltip")
                      =playerScore.score*2
                      span
                        table(class='boarderlessTable')
                            for item in playerScore.breakdown
                              tr
                                for field in item
                                  td
                                    =field
                    | &nbsp;C
                  else if playerScore.playerID == playerScore.viceCaptainID
                    a(class="tooltip")
                      =playerScore.score
                      span
                        table(class='boarderlessTable')
                            for item in playerScore.breakdown
                              tr
                                for field in item
                                  td
                                    =field
                    | &nbsp;V
                  else
                    a(class="tooltip")
                      =playerScore.score
                      span
                        table(class='boarderlessTable')
                            for item in playerScore.breakdown
                              tr
                                for field in item
                                  td
                                    =field

                  if playerScore.status != 'a'
                    | &nbsp;
                    a(class="tooltip")
                      img(class='warningheight', src='/images/status_#{playerScore.status}.png')
                      span
                        =playerScore.news


      div(class='fullTeamRow')
        p Bench
        table(class='benchTable')
          tr
            each player in allData.benchRows
              td
                =player.webName
                each transfer in allData.transfers.transferIn
                    if player.playerID == transfer
                      | &nbsp;
                      img(src='/images/transIn.png', alt='Transfer In', class='arrowheight')
          tr
            each playerScore in allData.benchRows
              td
                if playerScore.playerID == playerScore.captainID
                  a(class="tooltip")
                    =playerScore.score*2
                    span
                      table(class='boarderlessTable')
                          for item in playerScore.breakdown
                            tr
                              for field in item
                                td
                                  =field
                  | &nbsp;C
                else if playerScore.playerID == playerScore.viceCaptainID
                  a(class="tooltip")
                    =playerScore.score
                    span
                      table(class='boarderlessTable')
                          for item in playerScore.breakdown
                            tr
                              for field in item
                                td
                                  =field
                  | &nbsp;V
                else
                  a(class="tooltip")
                    =playerScore.score
                    span
                      table(class='boarderlessTable')
                          for item in playerScore.breakdown
                            tr
                              for field in item
                                td
                                  =field
                if playerScore.status != 'a'
                  | &nbsp;
                  a(class="tooltip")
                    img(class='warningheight', src='/images/status_#{playerScore.status}.png')
                    span
                      =playerScore.news
